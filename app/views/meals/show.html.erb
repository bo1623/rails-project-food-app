
<p> You have purchased: </p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @dish_names.each do |dish_name|%>
      <tr>
        <td><%=dish_name%></td>
        <td><%=@meal.dish_price(dish_name)%></td>
        <td><%=@meal.dish_count(dish_name)%></td>
        <td><%=@meal.dishes_cost(dish_name)%></td>
      </tr>
    <%end%>
  </tbody>
  <tfoot>
    <tr>
      <th  colspan="3">Total</th>
      <td><%=@meal.total%></td>
    </tr>
  </tfoot>
</table>

<%= button_to "Proceed", edit_meal_path, method: 'get'%>
