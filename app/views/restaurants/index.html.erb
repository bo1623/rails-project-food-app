<div>
  <p>Filter Restaurants:</p>
  <%= form_tag restaurants_path, method: :get do %>
    Cuisine: <%= select_tag :cuisine_id, options_from_collection_for_select(Cuisine.all, :id,:name), include_blank: true%><br>
    Location: <%= select_tag :location_id, options_from_collection_for_select(Location.all, :id,:name),include_blank: true%><br>
    <%= submit_tag "Filter"%>
  <%end%>
</div>

<br>

<table>
  <tr>
    <th>Name</th>
    <th>Cuisine</th>
    <th>Location</th>
    <th>Rating</th>
  </tr>
<%@restaurants.each do |restaurant|%>
  <tr>
    <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
    <td><%= restaurant.cuisine.name %></td>
    <td><%= restaurant.location.name %></td>
    <td><%= restaurant.restaurant_rating.nil? ? "Not Rated Yet" : restaurant.restaurant_rating %></td>
  </tr>
<%end%>
</table>

<br>

<% if admin? %>
  <%= render '/layouts/admin/admin_features' %>
<%end%>
